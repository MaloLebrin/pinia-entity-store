{
  "name": "@malolebrin/pinia-entity-store",
  "version": "0.2.4",
  "private": false,
  "packageManager": "pnpm@8.15.9",
  "description": "A lightweight Pinia plugin to manage relational entities in Pinia without having to learn a whole new ORM.",
  "author": {
    "name": "Malo Lebrin",
    "email": "malolebrin@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/MaloLebrin/pinia-entity-store.git"
  },
  "keywords": [
    "Pinia",
    "orm",
    "vue",
    "vue3",
    "typescript",
    "database",
    "normalizr",
    "plugin",
    "typed",
    "ts",
    "type"
  ],
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "rm -rf dist/ && tsc --project tsconfig.build.json",
    "type:check": "tsc --noEmit",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "rm -rf dist/ && npm run build",
    "postversion": "git push && git push --tags",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "dependencies": {
    "@antfu/utils": "^0.7.7"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.4",
    "@types/node": "^20.11.17",
    "@vitest/coverage-c8": "^0.33.0",
    "c8": "^9.1.0",
    "eslint": "^8.56.0",
    "pinia": "^2.1.7",
    "typescript": "^5.3.3",
    "unplugin-auto-import": "^0.17.5",
    "vite": "^5.1.1",
    "vitepress": "^1.0.0-rc.42",
    "vitest": "^1.2.2",
    "vue": "^3.4.18"
  }
}
