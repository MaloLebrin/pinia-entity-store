{
  "name": "@malolebrin/entity-store-core",
  "version": "0.3.0",
  "private": false,
  "packageManager": "pnpm@10.15.0",
  "description": "A lightweight, agnostic entity store core for managing relational entities with support for multiple state managers.",
  "author": {
    "name": "Malo Lebrin",
    "email": "malolebrin@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/MaloLebrin/pinia-entity-store.git"
  },
  "keywords": [
    "entity-store",
    "orm",
    "typescript",
    "database",
    "normalizr",
    "typed",
    "ts",
    "type",
    "agnostic",
    "state-management"
  ],
  "main": "dist/src/core/index.js",
  "types": "dist/src/core/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "rm -rf dist/ && tsc --project tsconfig.build.json",
    "build:packages": "pnpm -r build",
    "type:check": "tsc --noEmit",
    "test": "vitest",
    "test:core": "vitest src/core",
    "test:adapters": "vitest src/adapters",
    "coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "rm -rf dist/ && npm run build",
    "postversion": "git push && git push --tags",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "dependencies": {
    "@antfu/utils": "^9.2.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "@eslint/eslintrc": "^3.3.1",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "c8": "^10.1.3",
    "eslint": "^9.33.0",
    "typescript": "^5.9.2",
    "unplugin-auto-import": "^20.0.0",
    "vite": "^7.1.3",
    "vitepress": "^1.6.4",
    "vitest": "^3.2.4"
  },
  "volta": {
    "node": "24.6.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
