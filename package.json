{
  "name": "@malolebrin/entity-store-workspace",
  "version": "0.3.0",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "description": "Entity Store - A lightweight, agnostic entity store with support for multiple state managers",
  "author": {
    "name": "Malo Lebrin",
    "email": "malolebrin@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/MaloLebrin/pinia-entity-store.git"
  },
  "scripts": {
    "build": "pnpm -r build",
    "build:core": "pnpm --filter @malolebrin/entity-store-core build",
    "build:pinia": "pnpm --filter @malolebrin/entity-store-pinia build",
    "build:zustand": "pnpm --filter @malolebrin/entity-store-zustand build",
    "test": "pnpm -r test",
    "test:run": "pnpm -r test:run",
    "test:coverage": "pnpm -r test:coverage",
    "test:core": "pnpm --filter @malolebrin/entity-store-core test",
    "test:pinia": "pnpm --filter @malolebrin/entity-store-pinia test",
    "test:zustand": "pnpm --filter @malolebrin/entity-store-zustand test",
    "type:check": "pnpm -r type:check",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "@eslint/eslintrc": "^3.3.1",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "c8": "^10.1.3",
    "eslint": "^9.33.0",
    "typescript": "^5.9.2",
    "unplugin-auto-import": "^20.0.0",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  },
  "volta": {
    "node": "24.6.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
