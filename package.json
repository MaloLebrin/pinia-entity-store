{
  "name": "@malolebrin/pinia-entity-store",
  "version": "0.2.2",
  "private": false,
  "packageManager": "pnpm@7.17.1",
  "description": "A lightweight Pinia plugin to manage relational entities in Pinia without having to learn a whole new ORM.",
  "author": {
    "name": "Malo Lebrin",
    "email": "malolebrin@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/MaloLebrin/pinia-entity-store.git"
  },
  "keywords": [
    "Pinia",
    "orm",
    "vue",
    "vue3",
    "typescript",
    "database",
    "normalizr",
    "plugin",
    "typed",
    "ts",
    "type"
  ],
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "type:check": "tsc --noEmit",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "rm -rf dist/ && npm run build",
    "postversion": "git push && git push --tags",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.33.0",
    "@antfu/utils": "^0.7.0",
    "@types/node": "^18.11.9",
    "@vitest/coverage-c8": "^0.25.2",
    "c8": "^7.12.0",
    "eslint": "^8.27.0",
    "pinia": "^2.0.24",
    "typescript": "^4.9.3",
    "unplugin-auto-import": "^0.12.0",
    "vite": "^3.2.4",
    "vitepress": "^1.0.0-alpha.29",
    "vitest": "^0.25.2"
  }
}
